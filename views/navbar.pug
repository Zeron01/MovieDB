    // Community dropdown
    .dropdown
      a(href="#", class="navbar-button") Community &#9660;
      .dropdown-content
        // Old Community link now called Users
        a(href="/users", class="navbar-button") Users
        // People link
        a(href="/people", class="navbar-button") People

    .search-form
      form(action='/movies', method='get')
        input(type='text', name='title', class='search-input', placeholder='Search for a Movie')
        button(type='submit', class='search-button') Search